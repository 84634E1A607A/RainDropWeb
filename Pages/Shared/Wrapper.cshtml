@using RainDropWeb.Locale
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@Localization.Localize("SITE_TITLE")</title>
    <script src="js/jquery-3.6.4.min.js" type="text/javascript"></script>
    <script src="js/engineeringValue.js" type="text/javascript"></script>
    <script type="text/javascript">
        function SetGlobalLocale(locale) {
            $.ajax({
                method: "POST",
                url: "/Api/Language",
                data: {
                    language: locale
                },
                success: function () {
                    window.location.reload();
                }
            });
        }
    </script>
    <link href="css/mdui.min.css" rel="stylesheet"/>
</head>
<body class="mdui-loaded mdui-appbar-with-toolbar mdui-drawer-body-left mdui-theme-primary-purple mdui-theme-accent-light-blue mdui-theme-layout-auto">

<header class="mdui-appbar mdui-appbar-fixed">
    <div class="mdui-toolbar mdui-color-theme">
        <span class="mdui-btn mdui-btn-icon mdui-ripple" mdui-drawer="{target: '#main-drawer', swipe: true}">
            <i class="mdui-icon material-icons">menu</i>
        </span>
        <a class="mdui-typo-headline" href="/Index">@Localization.Localize("SITE_TITLE_BAR")</a>
        <div class="mdui-toolbar-spacer"></div>
        <span class="mdui-btn mdui-btn-icon mdui-ripple" mdui-menu="{target: '#language-menu'}">
            <i class="mdui-icon material-icons">language</i>
        </span>
        <ul class="mdui-menu" id="language-menu">
            <li class="mdui-menu-item">
                <a class="mdui-ripple" onclick="SetGlobalLocale('en')">@Localization.Localize("SITE_LANG_EN")</a>
            </li>
            <li class="mdui-menu-item">
                <a class="mdui-ripple" onclick="SetGlobalLocale('zh-CN')">@Localization.Localize("SITE_LANG_ZH_CN")</a>
            </li>
        </ul>
    </div>
</header>

<div class="mdui-drawer" id="main-drawer">
    <div class="mdui-list">
        <a class="mdui-list-item mdui-ripple" href="/Index" target="_blank">@Localization.Localize("SITE_HOME")</a>
        <a class="mdui-list-item mdui-ripple" href="/Oscilloscope" target="_blank">@Localization.Localize("SITE_OSC")</a>
        <a class="mdui-list-item mdui-ripple" href="/Supply" target="_blank">@Localization.Localize("SITE_SUPPLY")</a>
        <a class="mdui-list-item mdui-ripple" href="/WaveGenerator" target="_blank">@Localization.Localize("SITE_WAVE")</a>
    </div>
</div>

@RenderBody()

<script src="js/mdui.min.js" type="text/javascript"></script>
</body>
</html>